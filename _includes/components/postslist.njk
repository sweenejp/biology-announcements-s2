<section class="postslist-grid">
	{% for post in postslist | reverse %}
		<article class="post-card" {% if post.url == url %} data-current="current item"{% endif %}>
			<h3 class="post-card-title">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
            {% if post.data.featuredImage %}
                <img class="post-card-image"src="{{ post.data.featuredImage }}" alt="">
            {% endif %}
			{% if post.data.summary %}
				<p class="post-card-summary">
					{{ post.data.summary }}
				</p>
			{% endif %}
			<p>
				<time class="post-card-date" datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
				</time>
			</p>
			{% if post.data.tags %}
				<p class="post-card-tags">
					{% for tag in post.data.tags %}
		  			{%- if tag != "post" -%}
		  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
		  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
		  			{%- endif -%}
					{% endfor %}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>
