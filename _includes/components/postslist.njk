<section class="postslist-grid">
	{% for post in postslist | reverse %}
		<article class="post-card" {% if post.url == url %} data-current="current item"{% endif %}>
			{% if post.data.featuredImage %}
				<a href="{{ post.url | url }}"><img class="post-card-image"src="{{ post.data.featuredImage }}" alt=""></a>
			{% endif %}
			<div class="post-card-body">
				<h3 class="post-card-title">
					<a href="{{ post.url | url }}">
						{% if post.data.title %}
							{{ post.data.title }}
						{% else %}
							Untitled
						{% endif %}
					</a>
				</h3>
				<p class="post-card-data">
					<time datetime="{{ post.date | machineDate }}">
						<small>{{ post.date | readableDate }} by <a href="/authors/{{ post.data.author | slug }}/">{{ post.data.author }}</a></small>
					</time>
				</p>
				{% if post.data.summary %}
					<p class="post-card-summary">
						{{ post.data.summary }}
					</p>
				{% endif %}
				{% if post.data.tags %}
					<p class="post-card-tags">
						{% for tag in post.data.tags %}
			  			{%- if tag != "post" -%}
			  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			  			{%- endif -%}
						{% endfor %}
					</p>
			</div>
			{% endif %}
		</article>
	{% endfor %}
</section>
